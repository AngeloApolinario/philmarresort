  }

  .dropdown:hover .dropdown-content,
  .profile-menu:hover .dropdown-content {
    display: block;
  }

  .modal {
    display: none;
    position: fixed;
    z-index: 200;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.6);
