<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "My Profile" %></title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="icon" type="image/png" href="/images/logo.png">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #e0f7f7, #fefefe);
      margin: 0;
      color: #333;
    }

    .profile-container {
      max-width: 1100px;
      margin: 120px auto 60px;
      background: #fff;
      border-radius: 25px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
      overflow: hidden;
      animation: fadeIn 0.6s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .profile-header {
      background: linear-gradient(135deg, #008080, #00b3b3);
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      padding: 40px 20px;
      text-align: center;
    }

    .profile-header img {
      width: 110px;
      height: 110px;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid #fff;
      margin-bottom: 15px;
    }

    .profile-header h2 {
      margin: 0;
      font-size: 1.8rem;
    }

    .profile-header p {
      margin: 3px 0;
      opacity: 0.9;
    }

    .section {
      padding: 30px 40px;
      border-bottom: 1px solid #eee;
    }

    .section h3 {
      color: #008080;
      border-left: 6px solid #00a0a0;
      padding-left: 12px;
      font-size: 1.3rem;
      margin-bottom: 15px;
    }

    /* Notification cards */
    .notification {
      background-color: #f4ffff;
      border-left: 5px solid #00b3b3;
      padding: 15px 20px;
      margin: 10px 0;
      border-radius: 10px;
      transition: 0.3s;
    }

    .notification:hover {
      background-color: #e0f7f7;
    }

    /* Bookings table */
    table {
      width: 100%;
      border-collapse: collapse;
      border-radius: 10px;
      overflow: hidden;
    }

    th, td {
      text-align: left;
      padding: 14px 16px;
    }

    th {
      background: #008080;
      color: #fff;
      font-weight: 600;
    }

    tr:nth-child(even) {
      background: #f9f9f9;
    }

    .status {
      padding: 6px 12px;
      border-radius: 20px;
      font-weight: 600;
      text-transform: capitalize;
    }

    .status.pending { background-color: #fff3cd; color: #856404; }
    .status.accepted { background-color: #d4edda; color: #155724; }
    .status.declined { background-color: #f8d7da; color: #721c24; }

    form {
      display: flex;
      flex-direction: column;
      gap: 10px;
      max-width: 400px;
    }

    input {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-family: inherit;
    }

    button {
      background: #008080;
      color: #fff;
      border: none;
      padding: 10px;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: 0.3s;
    }

    button:hover {
      background: #006666;
    }

    .logout-link {
      display: inline-block;
      color: #c00;
      text-decoration: none;
      margin: 25px 40px;
      font-weight: 600;
    }

    .logout-link:hover {
      text-decoration: underline;
    }

    .refresh-status {
      text-align: center;
      color: #888;
      font-size: 0.9rem;
      margin-bottom: 10px;
    }

    @media (max-width: 768px) {
      .profile-header {
        padding: 30px 10px;
      }
      .section {
        padding: 20px;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="profile-container">
    <div class="profile-header">
      <img src="/images/sample-profile.jpg" alt="Profile Picture">
      <h2><%= user.fullname || "Guest User" %></h2>
      <p>@<%= user.username || user.email.split('@')[0] %></p>
      <p><%= user.email %></p>
      <small>Joined on <%= user.createdAt ? new Date(user.createdAt).toLocaleDateString() : 'â€”' %></small>
    </div>

    <!-- ðŸ  My Bookings -->
    <div class="section">
      <h3>My Bookings</h3>
      <div class="refresh-status" id="refreshStatus"></div>
      <div id="bookingsContainer">
        <% if (bookings && bookings.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>Room</th>
                <th>Check-In</th>
                <th>Check-Out</th>
                <th>Guests</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% bookings.forEach(b => { %>
                <tr>
                  <td><%= b.room || "N/A" %></td>
                  <td><%= b.checkin ? new Date(b.checkin).toLocaleDateString() : "â€”" %></td>
                  <td><%= b.checkout ? new Date(b.checkout).toLocaleDateString() : "â€”" %></td>
                  <td><%= b.guests || 1 %></td>
                  <td><span class="status <%= b.status %>"><%= b.status || 'Pending' %></span></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p>You have no bookings yet.</p>
        <% } %>
      </div>
    </div>

    <!-- ðŸ”” Notifications -->
    <div class="section">
      <h3>Notifications</h3>
      <div id="notificationsContainer">
        <% if (notifications && notifications.length > 0) { %>
          <% notifications.forEach(note => { %>
            <div class="notification"><%= note.message %></div>
          <% }) %>
        <% } else { %>
          <p>No new notifications.</p>
        <% } %>
      </div>
    </div>

    <!-- ðŸ” Change Password -->
    <div class="section">
      <h3>Change Password</h3>
      <form method="POST" action="/profile/update-password">
        <input type="password" name="currentPassword" placeholder="Current Password" required>
        <input type="password" name="newPassword" placeholder="New Password" required minlength="6">
        <button type="submit">Update Password</button>
      </form>
    </div>

    <a href="/logout" class="logout-link">Log Out</a>
  </div>

  <script>
    const userId = "<%= user._id %>";

    async function fetchUpdates() {
      try {
        const refreshStatus = document.getElementById('refreshStatus');
        refreshStatus.textContent = "Checking for updates...";
        
        const res = await fetch(`/userUpdates/${userId}`);
        const data = await res.json();
        refreshStatus.textContent = "";

        if (data.success) {
          updateBookings(data.bookings);
          updateNotifications(data.notifications);
        }
      } catch (error) {
        console.error("Polling error:", error);
      }
    }

    function updateBookings(bookings) {
      const container = document.getElementById('bookingsContainer');
      if (!bookings || bookings.length === 0) {
        container.innerHTML = "<p>You have no bookings yet.</p>";
        return;
      }

      container.innerHTML = `
        <table>
          <thead>
            <tr>
              <th>Room</th>
              <th>Check-In</th>
              <th>Check-Out</th>
              <th>Guests</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            ${bookings.map(b => `
              <tr>
                <td>${b.room || "N/A"}</td>
                <td>${new Date(b.checkin).toLocaleDateString()}</td>
                <td>${new Date(b.checkout).toLocaleDateString()}</td>
                <td>${b.guests || 1}</td>
                <td><span class="status ${b.status}">${b.status}</span></td>
              </tr>
            `).join('')}
          </tbody>
        </table>
      `;
    }

    function updateNotifications(notes) {
      const container = document.getElementById('notificationsContainer');
      if (!notes || notes.length === 0) {
        container.innerHTML = "<p>No new notifications.</p>";
        return;
      }

      container.innerHTML = notes.map(n => `<div class="notification">${n.message}</div>`).join('');
    }

    // Poll every 5 seconds
    setInterval(fetchUpdates, 5000);
  </script>
</body>
</html>
